<Window x:Class="PoemHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoemHelper"
        mc:Ignorable="d"
        KeyUp="Window_KeyUp"
        Title="PoemHelper" MinHeight="450" MinWidth="800" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="GlowingTextStyle" TargetType="TextBox">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" 
                                      ShadowDepth="0"
                                      Opacity="1"
                                      Color="{Binding RelativeSource={RelativeSource AncestorType=TextBlock}, Path=Foreground.Color}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="#222222">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#111111">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Menu Background="#111111">
                <MenuItem x:Name="Save" Header="Save" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Save_Click"/>
                <MenuItem x:Name="Load" Header="Load" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Load_Click"/>
                <Span/>
                <MenuItem x:Name="SaveVowels" Header="Save vowels" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="SaveVowels_Click"/>
                <Span/>
                <MenuItem x:Name="Plus" Header="+" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Plus_Click"/>
                <MenuItem x:Name="Minus" Header="-" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Minus_Click"/>
            </Menu>

            <Label x:Name="StatHeader" Content="Stat: 6" Foreground="White" Padding="8,1" FontFamily="Cascadia Mono" FontSize="16" Grid.Column="1" />

        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="IdLine" Text="1" FontFamily="Cascadia Mono" Padding="5,1" FontSize="14" Background="#282828" Foreground="White" Grid.Column="0" TextAlignment="Center" />

                <TextBox x:Name="Input" Text="Жуля 💕" FontFamily="Cascadia Mono" FontSize="14" Foreground="White" Background="#333333" Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="Input_TextChanged" />
                <TextBox x:Name="Shadow" Text=" у я 💕" Style="{StaticResource GlowingTextStyle}" FontFamily="Cascadia Mono" FontSize="14" Foreground="DeepSkyBlue" Background="Transparent" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" IsHitTestVisible="False" />

                <TextBlock x:Name="OutputStat" Text="3" FontFamily="Cascadia Mono" Padding="5,1" FontSize="14" Background="#282828" Foreground="White" Grid.Column="2" TextAlignment="Center" />
                <TextBlock x:Name="OutputMsg" FontFamily="Cascadia Mono" FontSize="14" Foreground="White" Grid.Column="3" Grid.ColumnSpan="2" />

            </Grid>

        </ScrollViewer>

    </Grid>

</Window>
