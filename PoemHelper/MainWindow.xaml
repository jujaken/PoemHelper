<Window x:Class="PoemHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoemHelper"
        mc:Ignorable="d"
        KeyUp="Window_KeyUp"
        xmlns:picker="clr-namespace:ag.WPF.ColorPicker;assembly=ag.WPF.ColorPicker"
        Title="PoemHelper" MinHeight="450" MinWidth="800" Height="450" Width="800">

    <Window.Resources>

        <Color x:Key="CurrentMainColor" R="0" G="191" B="255" />
        
        <Style x:Key="GlowingTextStyle" TargetType="TextBox">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" 
                                      ShadowDepth="0"
                                      Opacity="1"
                                      Color="{Binding RelativeSource={RelativeSource AncestorType=TextBox}, Path=Foreground.Color}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="{DynamicResource CurrentMainColor}"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>

    <Grid Background="#222222">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#111111">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Background="#111111" Orientation="Horizontal">
                <Button x:Name="Save" Content="Save" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Save_Click"/>
                <Button x:Name="Load" Content="Load" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Load_Click"/>
                <Grid Width="10"/>
                <Button x:Name="SaveVowels" Content="Save vowels" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="SaveVowels_Click"/>
                <Grid Width="20"/>
                <Label Content="Size:" Padding="0,4" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" VerticalContentAlignment="Center" />
                <Button x:Name="Plus" Content="+" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Plus_Click"/>
                <Button x:Name="Minus" Content="-" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Click="Minus_Click"/>
                <Grid Width="20"/>
                <picker:ColorPicker x:Name="ColorButton" SelectedColor="DeepSkyBlue" Width="62" Height="16" SelectedColorChanged="ColorButton_SelectedColorChanged"/>
            </StackPanel>

            <Label x:Name="StatHeader" Content="Stat: 6" Foreground="White" FontFamily="Cascadia Mono" FontSize="16" Grid.Column="1" VerticalContentAlignment="Center" />

        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="IdLine" Text="1" FontFamily="Cascadia Mono" Padding="5,1" FontSize="14" Background="#282828" Foreground="White" Grid.Column="0" TextAlignment="Center" />

                <TextBox x:Name="Input" Text="Жуля 💕" FontFamily="Cascadia Mono" FontSize="14" Foreground="White" Background="#333333" Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" AcceptsReturn="True" TextWrapping="Wrap" TextChanged="Input_TextChanged" />
                <TextBox x:Name="Shadow" Text=" у я 💕" Style="{StaticResource GlowingTextStyle}" FontFamily="Cascadia Mono" FontSize="14" Foreground="DeepSkyBlue" Background="Transparent" AcceptsReturn="True" TextWrapping="Wrap" Grid.Column="1" IsHitTestVisible="False" />

                <TextBlock x:Name="OutputStat" Text="3" FontFamily="Cascadia Mono" Padding="5,1" FontSize="14" Background="#282828" Foreground="White" Grid.Column="2" TextAlignment="Center" />
                <TextBlock x:Name="OutputMsg" FontFamily="Cascadia Mono" FontSize="14" Foreground="White" Grid.Column="3" Grid.ColumnSpan="2" />

            </Grid>

        </ScrollViewer>

    </Grid>

</Window>
